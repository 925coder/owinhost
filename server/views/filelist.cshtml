<h1>All files here: </h1>
<table class="table">
 @foreach (dynamic f in @Model){
    try
    {
    <tr>
      <td><a href="@f.Type/@f.Name">@f.Name</a></td>
      <td>@f.Path</td>
      <td>@f.Type</td>
    </tr>
    }
    catch (Exception ex)
    {
    <p>Error @ex.Message</p>
    }
}
</table>

<script src="../content/jquery-2.1.0.min.js" type="text/javascript"></script>
<script src="../content/jquery.signalR-2.0.2.min.js" type="text/javascript"></script>
<script src="../content/bootstrap.min.js"></script>
<script src="http://localhost:8077/signalr/hubs" type="text/javascript"></script>

<script type="text/javascript">
  $(function () {
    $.connection.hub.url = "http://localhost:8077/signalr";
    var notify = $.connection.notifyhub;

    notify.client.show = function (name, message) {
      alert(name + " says " + message);
    }

    // Start the connection and request current state
    $.connection.hub.start(function () {
    });
  });
</script>
